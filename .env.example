# -------------------------
# Core Network & Wallet Keys
# -------------------------
PRIVATE_KEY= # Your main wallet private key (never share publicly)
UNISWAP_WALLET_PRIVATE_KEY= # Optional separate wallet for Uniswap ops

PUBLIC_ADDRESS=0xYourMainnetWalletAddress
UNISWAP_WALLET_ADDRESS=0xYourUniswapWalletAddress

# -------------------------
# RPC & WebSocket URLs (Infura defaults)
# -------------------------
RPC_ETHEREUM_URL=https://mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID
RPC_ARBITRUM_URL=https://arbitrum-mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID
RPC_OPTIMISM_URL=https://optimism-mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID
RPC_SEPOLIA_URL=https://sepolia.infura.io/v3/YOUR_INFURA_PROJECT_ID

WSS_ETHEREUM_URL=wss://mainnet.infura.io/ws/v3/YOUR_INFURA_PROJECT_ID
WSS_ARBITRUM_URL=wss://arbitrum-mainnet.infura.io/ws/v3/YOUR_INFURA_PROJECT_ID
WSS_OPTIMISM_URL=wss://optimism-mainnet.infura.io/ws/v3/YOUR_INFURA_PROJECT_ID
WSS_SEPOLIA_URL=wss://sepolia.infura.io/ws/v3/YOUR_INFURA_PROJECT_ID

# -------------------------
# AI / ML API Keys
# -------------------------
OPENAI_API_KEY= # OpenAI API key for online audits and intent classification
INTENT_CLASSIFIER_LIVE=0 # 1 to enable real AI intent classification, 0 fallback stub

# -------------------------
# Flashbots / SUAVE Relays
# -------------------------
FLASHBOTS_AUTH_KEY= # Private key used for Flashbots/SUAVE bundles
FLASHBOTS_RPC_URL=https://relay.flashbots.net

# -------------------------
# Founder & Ops Controls
# -------------------------
FOUNDER_TOKEN= # token or file path for founder approval
KILL_SWITCH=0 # Toggle global kill switch (1 = halt all trading)
KILL_SWITCH_FLAG_FILE=./flags/kill_switch.txt
KILL_SWITCH_LOG_FILE=./logs/kill_log.json
CAPITAL_LOCK_ENABLED=true

# -------------------------
# Mutation & Telemetry
# -------------------------
METRICS_PORT=9102
METRICS_TOKEN= # Optional Bearer token for Prometheus metrics auth
MUTATION_ID=dev # Tag for current mutation cycle
TRACE_ID= # Unique approval trace ID
DRP_ENC_KEY= # Optional key for DRP archive encryption
EXPORT_DIR=export
EXPORT_LOG_FILE=logs/export_state.json
ROLLBACK_LOG_FILE=logs/rollback.log
ERROR_LOG_FILE=logs/errors.log

# -------------------------
# Alerting & Notifications
# -------------------------
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
DISCORD_WEBHOOK_URL=
OPS_ALERT_WEBHOOK=
SENDGRID_API_KEY=

# -------------------------
# Strategy & Advanced Feature Flags
# -------------------------
FLASHLOAN_API=http://localhost:9001
POOL_SCANNER_API=http://localhost:9002
INTENT_API_URL=http://localhost:9000

L1_SANDWICH_ENABLED=true
GHOSTING_ENABLED=false
STEALTH_MODE=true
HEDGE_ENABLED=false
SOCIAL_ALPHA_ENABLED=false

# -------------------------
# Wallet Ops & Batch
# -------------------------
WALLET_OPS_LOG=./logs/wallet_ops.log
BATCH_OPS_CONFIG= # Optional batch ops config file
NONCE_CACHE_FILE=state/nonce_cache.json
NONCE_LOG_FILE=logs/nonce_log.json

# -------------------------
# Strategy Parameters (example)
# -------------------------
TARGET_PROFIT=0.02
STARTING_CAPITAL=2000.0
GAS_LIMIT=3500000
SLIPPAGE_BPS=50   # 0.5% slippage
